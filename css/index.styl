@import 'nib'

*
  box-sizing: border-box
  margin: 0
  padding: 0

html, body
  height: 100%

body
  background-color: hsl(150, 40, 45)
  color: #333
  font-family: 'Open Sans', sans-serif
  user-select: none
  overflow: hidden
  text-size-adjust: 100%

#container
  position: fixed
  top: calc(50% + 1.5rem)
  left: 50%
  transform: translate3d(-50%, -50%, 0)

#topbar
  position: fixed
  top: 0
  left: 0
  width: 100%
  background-color: hsl(152, 20, 25)
  padding: .25rem
  text-align: center

  button
    background: none
    border: 1px solid #fff
    outline: none
    margin: .1rem
    padding: .4rem
    font: inherit
    font-size: .75rem
    line-height: 1
    color: #fff
    cursor: pointer

    &:hover
      background-color: #fff
      color: #444

#players
  position: fixed
  top: 50%
  left: 50%
  
.message
  position: fixed
  top: 2.5rem
  left: 0
  width: 100%
  padding: 1rem .5rem
  font-size: .5rem
  text-align: center

#chat-container
  position: fixed
  display: flex
  flex-direction: column
  bottom: 0
  right: 0
  height: 10rem
  width: 15rem
  border-radius: 4px
  background-color: #fff

#chat-container>#chat-input
  width: 100%
  height: 32px
  flex-shrink: 0
  padding-inline: 0.3rem
  outline: none
  border: 1px solid #a1acb3

#chat-container>ul
  flex-grow: 1
  padding: 0.1rem 0.3rem
  overflow-y: auto
  
#chat-container>ul>li
  font-size: 0.7rem

#chat-container>ul>li.own
  text-align: right


.modal
  display: none
  min-width: 15rem
  position: fixed
  top: 50%
  left: 50%
  padding: 1rem 0.5rem
  border-radius: 4px
  border: 1px solid #f1f1f1
  background: #fff
  transform: translate(-50%, -50%)
  z-index: 1000

.modal header
  display: flex
  justify-content: space-between
  margin-bottom: 0.5rem

.modal header>h1
  font-size: 1rem

.modal header>button
  width: 1rem
  height: 1rem
  border: none
  outline: none
  border-radius: 50%
  background-color: #dfdfdf
  transition: background-color ease 0.1s
  cursor: pointer

.modal header>button:hover
  background-color: #bbbbbb

.modal.is-open
  display: block
  
input[type=text]
  padding: 0.4rem 0.6rem
  border: 1px solid #aeaeae
  border-radius: 4px
  outline: none

.button
  display: block
  padding: 0.4rem 0.6rem
  border: none
  border-radius: 4px
  background-color: #1182d9
  color: #fff
  cursor: pointer

.button:hover
  background-color: #0d63a6

.button:active
  background-color: #094777

@import 'card'

@media (max-width: 540px)
  #topbar
    text-align: left

  .gh-ribbon
    transform: scale(.5)
    transform-origin: 100% 0

@media (min-width: 640px)
  html
    font-size: 125%
